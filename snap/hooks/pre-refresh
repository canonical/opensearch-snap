#!/usr/bin/env bash

set -eux

# A refresh started, point to the new snap revision where data will be
echo "${SNAP_DATA}" > "${SNAP_COMMON}"/on_refresh_snap

mkdir -p "${SNAP_COMMON}"/in_upgrade

# Clean old SNAP_DATA lib,plugins and modules, as we've copied the jars to the new folder already
mv "${SNAP_DATA}"/usr/share/opensearch/lib "${SNAP_COMMON}"/in_upgrade
mv "${SNAP_DATA}"/usr/share/opensearch/modules "${SNAP_COMMON}"/in_upgrade
mv "${SNAP_DATA}"/usr/share/opensearch/plugins "${SNAP_COMMON}"/in_upgrade
